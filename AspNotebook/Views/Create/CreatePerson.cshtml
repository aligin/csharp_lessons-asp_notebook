@model PersonPostViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    @if (ViewBag.Sucess == true)
    {
        <div class="alert alert-success" role="alert">
            @ViewBag.Message
        </div>
    }
    else if (ViewBag.Error == true)
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.Message
        </div>
    }

    <div class="form-group col-md-4">
        <form align="left" method="post">
            <div class="form-group">
                <label for="personInputName">Имя</label>
                <input type="text" class="form-control" asp-for="Name">
            </div>
            <div class="form-group">
                <label for="personInputTelephone">Телефон</label>
                <input type="tel" class="form-control" asp-for="Telephone">
            </div>
            <button type="submit" class="btn btn-primary">Сохранить</button>
        </form>
    </div>
</div>
